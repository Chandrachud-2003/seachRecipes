<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/cardview"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >




        <ImageButton
            android:id="@+id/favorite_recipe_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:contentDescription="@string/favoriteRecipeImage_contentDescription" />

        <TextView
            android:id="@+id/favorite_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/favorite_recipe_img"
            android:layout_centerHorizontal="true"
            android:background="#80000000"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:gravity="center"
            android:lines="2"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/deleteButton"

            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxHeight="42dp"
            android:maxWidth="42dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/deleteButton_contectDescription" />








    </RelativeLayout>


</android.support.v7.widget.CardView>